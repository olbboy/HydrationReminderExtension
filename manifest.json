{
  "manifest_version": 3,
  "name": "Hydration Reminder",
  "version": "1.0.0",
  "description": "A reminder to help you stay hydrated throughout the day",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "system.display"
  ],
  "host_permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"],
      "css": ["styles/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["public/sounds/*", "styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 